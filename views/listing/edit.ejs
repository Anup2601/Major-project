<% layout("/layout/boilerplate") %>
<body>
    <h1>Edit Listing</h1>
    <form action="/listings/<%= listings._id %>?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        
        <label for="title">Title:</label>
        <input name="listing[title]" value="<%= listings.title %>" type="text">
        <br><br>
        
        <label for="description">Description:</label>
        <input name="listing[description]" value="<%= listings.description %>" type="text">
        <!-- <br><br> -->
        
        <!-- <label for="image">Image:</label> -->
        <!-- <input name="listing[image]" value="<%= listings.image %>" type="text"> -->
        <br><br>
        
        <label for="price">Price:</label>
        <input name="listing[price]" value="<%= listings.price %>" type="number">
        <br><br>
        
        <label for="location">Location:</label>
        <input name="listing[location]" value="<%= listings.location %>" type="text">
        <br><br>
        
        <label for="country">Country:</label>
        <input name="listing[country]" value="<%= listings.country %>" type="text">
        <br><br>
        
        <button type="submit">Edit</button>
    </form>
</body>
 
